<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :name_first %><br />
  <%= f.text_field :name_first %></div>
  <div><%= f.label :name_middle %><br />
  <%= f.text_field :name_middle %></div>
  <div><%= f.label :name_last %><br />
  <%= f.text_field :name_last %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

   <div><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>
    <div><%= f.label :fax %><br />
  <%= f.text_field :fax %></div>
  
  <div><%= f.label :address1 %><br />
   <%= f.text_field :address1 %></div>
  <div><%= f.label :address2 %><br />
  <%= f.text_field :address2 %></div>
  <div><%= f.label :city %><br />
  <%= f.text_field :city %></div>
  <div><%= f.label :province %><br />
  <%= f.text_field :province %></div>
  <div><%= f.label :state %><br />
  <%= f.text_field :state %></div>
  <div><%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %></div>
  
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
