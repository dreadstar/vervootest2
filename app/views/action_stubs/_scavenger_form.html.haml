= form_for([@challenge, @action_stub.specific]) do |f|
  - if @action_stub.errors.any?
    #error_explanation
      %h2
        = pluralize(@action_stub.errors.count, "error")
        prohibited this action_stub from being saved:
      %ul
        - @action_stub.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :enabled
    %br/
    = f.check_box :enabled
  .field
    = f.label :amt
    %br/
    = f.text_field :amt

  .field
    = f.label :start_msg
    %br/
    = f.text_field :start_msg

  .field
    = f.label :complete_msg
    %br/
    = f.text_field :complete_msg

  .field
    = f.label :team
    %br/
    = f.text_field :team

  .actions
    = f.submit
