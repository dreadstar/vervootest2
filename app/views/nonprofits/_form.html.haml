= form_for @nonprofit, :html => { :multipart => true }  do |f|
  - if @nonprofit.errors.any?
    #error_explanation
      %h2
        = pluralize(@nonprofit.errors.count, "error")
        prohibited this nonprofit from being saved:
      %ul
        - @nonprofit.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :enabled
    %br/
    = f.check_box :enabled
  .field
    = f.label :image_full
    %br/
    = f.file_field :image_full
  .field
    = f.label :image_thumb
    %br/
    = f.file_field :image_thumb
  .field
    = f.label :address1
    %br/
    = f.text_field :address1
  .field
    = f.label :address2
    %br/
    = f.text_field :address2
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :province
    %br/
    = f.text_field :province
  .field
    = f.label :postal_code
    %br/
    = f.text_field :postal_code
  .field
    = f.label :country
    %br/
    = f.text_field :country
  .field
    = f.label :phone_number
    %br/
    = f.text_field :phone_number
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :seo_name
    %br/
    = f.text_field :seo_name
  .actions
    = f.submit
