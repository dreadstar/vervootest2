.page-title
  %h1 Challenges

  = link_to 'New Challenge', new_challenge_path, class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Start Date
      %th End Date
      %th Total Offer
      %th Amount raised
      %th enabled
      %th Actions

  %tbody
    - @challenges.each do |challenge|
      %tr
        %td= challenge.name
        %td= challenge.start_date
        %td= challenge.end_date
        %td= challenge.total_offer
        %td= challenge.amount_raised
        %td= challenge.enabled
        %td
          = link_to 'View', challenge_path(challenge)
          |
          = link_to 'Edit', edit_challenge_path(challenge)
          |
          = link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' }
